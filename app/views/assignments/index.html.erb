<% provide(:title, 'All assignments') %>
<% provide(:button_text, 'New assignment') %>
<h1>All assignments</h1>

<%= form_tag(@assignment, method: :get) do %>
  <%= text_field_tag :term, params[:term], class: "form-control" %>
  <%= submit_tag 'Search' , name: nil, class: "btn btn-primary" %>
<% end %>

<br>

<%= will_paginate %>

<ul class="assignments">
    <%= render @assignments %>
</ul>

<%= will_paginate %>

<br>
<div class="center">
  <%= button_to yield(:button_text), new_assignment_path, class: "btn btn-primary" %>
</div>
